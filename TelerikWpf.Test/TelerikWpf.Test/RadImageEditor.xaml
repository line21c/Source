<Page x:Class="TelerikWpf.Test.RadImageEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      xmlns:local="clr-namespace:TelerikWpf.Test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RadImageEditor">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="White" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <telerik:RadButton x:Name="btnShow" Content="보기" Width="150" Margin="5 5 5 5" FontSize="15" FontWeight="Bold"  />
        </StackPanel>
        <telerik:RadImageEditorUI Grid.Row="1" x:Name="ImageEditorUI" IsOpenButtonVisible="True" IsSaveButtonVisible="False"  Padding="0 0 0 0" />


    </Grid>
</Page>
